<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Panel de Administración</h1>
            <a href="/logout" class="btn btn-danger">Cerrar Sesión</a>
        </div>
        
        <h2>Publicar Nueva Prédica</h2>
        <form action="/api/sermons" method="POST"> <button type="submit" class="btn btn-primary">Publicar Prédica</button>
        </form>

        <hr class="my-5">

        <h2>Gestionar Prédicas</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Predicador</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% sermons.forEach(sermon => { %>
                    <tr>
                        <td><%= sermon.titulo %></td>
                        <td><%= sermon.predicador %></td>
                        <td><%= sermon.createdAt.toLocaleDateString('es-AR') %></td>
                        <td>
                            <a href="/admin/edit/<%= sermon._id %>" class="btn btn-sm btn-warning">Editar</a>
                            <form action="/admin/delete/<%= sermon._id %>" method="POST" class="d-inline" onsubmit="return confirm('¿Estás seguro de que quieres borrar esta prédica?');">
                                <button type="submit" class="btn btn-sm btn-danger">Borrar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    </body>